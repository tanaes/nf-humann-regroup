params {
    config_profile_name        = 'Full test profile, local cloud storage'
    config_profile_description = 'Azure BATCH Cloud Profile'
    config_profile_contact = 'Venkat Malladi (@vsmalladi) & Adam Talbot (@adamrtalbot)'
    config_profile_url = 'https://azure.microsoft.com/services/batch/'
 
    // Storage
    storage_name      = null
    storage_key       = null
    storage_sas       = null
 
    // Batch
    az_location       = "eastus"
    batch_name        = null
    batch_key         = null
 
    autopoolmode      = false
    allowpoolcreation = true
    deletejobs        = true
    deletepools       = true
 
    // ACR
    acr_registry      = null
    acr_username      = null
    acr_password      = null

    // Shared files
 
}

    
process {

    maxRetries = 2
    cleanup = true
    cache = true
    executor = "azurebatch"
    queue = 'Standard_A2_v2'
    cpus = 2
    memory = 4.GB
    time = '4.h'
    

    withLabel: medmem
    {
        queue = 'Standard_E8_v3'
        time = '4h'
        cpus = 8
        memory = '64 GB'
        errorStrategy = 'retry'
    }

    withName: bigmem
    {
        queue = 'Standard_E32s_v3'
        time =  '4h'
        cpus = 32
        memory = '256 GB'
        errorStrategy = 'retry'
    }
}

azure {
    storage {
        accountName = params.storage_name
        accountKey  = params.storage_key
        sasToken    = params.storage_sas
        tokenDuration = '10d'
        fileShares {
            'metagenome-dbs' {
                mountPath = "/dbs/metagenometest/metagenome-dbs"}
        }
    }
    batch {
        location                = params.az_location
        accountName             = params.batch_name
        accountKey              = params.batch_key
        tokenDuration           = "24h"
        autoPoolMode            = params.autopoolmode
        allowPoolCreation       = params.allowpoolcreation
        deleteJobsOnCompletion  = params.deletejobs
        deletePoolsOnCompletion = params.deletepools
        pools {
            Standard_A2_v2 {
                autoScale = true
                vmType = 'Standard_A2_v2'
                vmCount = 2
                maxVmCount = 64
            }
            Standard_E8_v3 {
                autoScale = true
                vmType = 'Standard_E8_v3'
                vmCount = 2
                maxVmCount = 25
            }
            Standard_E8s_v3 {
                autoScale = true
                vmType = 'Standard_E8s_v3'
                vmCount = 2
                maxVmCount = 64
            }
            Standard_E8s_v3_spot {
                autoScale = true
                vmType = 'Standard_E8s_v3'
                vmCount = 2
                maxVmCount = 64
                lowPriority = true
            }
            Standard_E16s_v3 {
                autoScale = true
                vmType = 'Standard_E16s_v3'
                vmCount = 2
                maxVmCount = 20
            }
            Standard_E32s_v3 {
                autoScale = true
                vmType = 'Standard_E32s_v3'
                vmCount = 2
                maxVmCount = 20
            }
        }
    }
    registry {
        server   = params.acr_registry
        userName = params.acr_username
        password = params.acr_password
    }
}

